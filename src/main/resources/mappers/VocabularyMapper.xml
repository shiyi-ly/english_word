<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.english.word.mapper.VocabularyMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.english.word.entity.mybatis.VocabularyEntity">
        <id column="id" property="id" />
        <result column="category_id" property="categoryId" />
        <result column="english_word" property="englishWord" />
        <result column="chinese_word" property="chineseWord" />
        <result column="description" property="description" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, category_id, english_word, chinese_word, description, create_time, update_time
    </sql>

</mapper>
